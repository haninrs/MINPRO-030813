// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sample {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("samples") // if you want to use snake_case format
}

model User_Costumer {
  id             Int              @id @default(autoincrement())
  username       String           @unique
  email          String           @unique
  password       String
  confirmPw      String
  image          String?          @db.LongText
  isActive       Boolean          @default(false)
  referral       String?          @unique
  accountType    String           @default("user")
  Points         Points[]
  DiscountCoupon DiscountCoupon[]
  Order          Order[]
}

model User_Promotor {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  email       String  @unique
  password    String
  confirmPw   String
  image       String? @db.LongText
  isActive    Boolean @default(false)
  accountType String  @default("orginazer")
  Event       Event[]
}

model Points {
  id              Int           @id @default(autoincrement())
  user            User_Costumer @relation(fields: [user_CostumerId], references: [id])
  user_CostumerId Int
  points          Int           @default(0)
  generatedAt     DateTime      @default(now())
  experationDate  DateTime?
  isUsed          Boolean       @default(false)
}

model DiscountCoupon {
  id              Int           @id @default(autoincrement())
  user            User_Costumer @relation(fields: [user_CostumerId], references: [id])
  user_CostumerId Int
  discountPercent Float         @default(0.10)
  experationDate  DateTime
}

model Event {
  id             Int           @id @default(autoincrement())
  title          String
  description    String
  location       String
  imageUrl       String        @db.LongText
  startDateTime  DateTime
  endDateTime    DateTime
  price          Int
  isFree         Boolean       @default(false)
  ticket         Int?
  userPromotorId Int
  userPromotor   User_Promotor @relation(fields: [userPromotorId], references: [id])
  Order          Order[]
}

model Order {
  id             Int           @id @default(autoincrement())
  userCostumerId Int
  eventId        Int
  totalAmount    Int
  quantity       Int?          @default(0)
  createdAt      DateTime      @default(now())
  event          Event         @relation(fields: [eventId], references: [id])
  userCostumer   User_Costumer @relation(fields: [userCostumerId], references: [id])
}
